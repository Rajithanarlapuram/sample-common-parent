                                <artifactId>apigee-edge-maven-plugin</artifactId>
                                <version>1.1.7</version>
                                <executions>
                                    <execution>
                                        <id>configure-bundle-step</id>
                                        <phase>package</phase>
                                        <goals>
                                            <goal>configure</goal>
                                        </goals>
