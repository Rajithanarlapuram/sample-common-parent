                                        <goals>
                                            <goal>configure</goal>
                                        </goals>
                                    </execution>
                                    <execution>
                                        <id>deploy-bundle</id>
                                        <phase>install</phase>
                                        <goals>
                                            <goal>deploy</goal>
                                        </goals>
                                    </execution>
                                </executions>
