                                        </goals>
                                    </execution>
                                    <execution>
                                        <id>export-config-app</id>
                                        <phase>verify</phase>
                                        <goals>
                                            <goal>exportAppKeys</goal>
                                        </goals>
                                    </execution>
                                    <execution>
                                        <id>create-config-keystores</id>
                                        <phase>install</phase>                        
                                        <goals>
                                            <goal>keystores</goal>
                                        </goals>
                                    </execution>
                                    <execution>
                                        <id>create-config-aliases</id>
                                        <phase>install</phase>                        
                                        <goals>
                                            <goal>aliases</goal>
                                        </goals>
                                    </execution>
                                    <execution>
                                        <id>create-config-references</id>
                                        <phase>install</phase>                        
                                        <goals>
                                            <goal>references</goal>
                                        </goals>
                                    </execution>
                                </executions>
                            </plugin>
                        </plugins>
                    </build>
                
                </profile>
            
                <profile>
                    <id>apigee-prep</id>
                    <properties>
                        <apigee.profile>apigee-prep</apigee.profile>
                        <apigee.env>${env}</apigee.env>
