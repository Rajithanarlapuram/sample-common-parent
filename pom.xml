                </profile>


                <!-- apigee-hybrid-sharedflow-->
                <profile>
                    <id>hybrid-sharedflow</id>
                    <properties>
                        <apigee.profile>hybrid-sharedflow</apigee.profile>
                        <apigee.hosturl>https://apigee.googleapis.com</apigee.hosturl>
                        <apigee.apiversion>v1</apigee.apiversion>
